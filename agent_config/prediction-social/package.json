{
  "name": "prediction-social",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Social media platform where visibility is earned through prediction accuracy",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:engine && npm run build:backend && npm run build:frontend",
    "build:engine": "cd engine && cargo build --release -p engine-ffi",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:engine && npm run test:backend && npm run test:frontend",
    "test:engine": "cd engine && cargo test",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "playwright test",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:engine",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:engine": "cd engine && cargo clippy",
    "db:migrate": "dbmate up",
    "db:rollback": "dbmate down",
    "db:status": "dbmate status"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.0",
    "dbmate": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

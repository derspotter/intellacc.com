POSTGRES_PASSWORD=supersecretpassword
POSTGRES_DB=intellaccdb
POSTGRES_PORT=5432

# Node Application Configuration
NODE_ENV=development
NODE_PORT=3000
DATABASE_URL=postgres://intellacc_user:supersecretpassword@db:5432/intellaccdb
FEDERATION_BASE_URL=https://intellacc.de
APP_PUBLIC_URL=https://intellacc.de
FRONTEND_URL=https://intellacc.de
ATPROTO_OAUTH_CLIENT_ID=https://intellacc.de/api/federation/atproto/client-metadata.json
